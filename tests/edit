#!/usr/bin/env bash

# Edits a test case
#
# Usage: edit [tc]
#
# tc - test case number
#      default: last

# Get test case number
tc=${1:-$(tests/count)}

# Input directory
inputdir=tests/cases/input

# Search through list of test cases
for file in $(tests/list); do
	# If it matches one of them...
	if [[ $file == $tc ]] ; then
		# ...open test case or...
		$(tests/func edit "\"$inputdir/$file\"")
		exit 0
	fi
done 

# ...notify that test case don't exist
echo "Test case $1 doesn't exist"
exit 1
