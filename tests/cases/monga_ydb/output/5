(program
	(def_function id="ap" type="int"
		(parameter id="n" type="int")
		(block
			(def_variable id="sum" type="int")
			(statement =
				(variable "sum")
				(expression integer "0")
			)
			(statement while
				(condition >
					(expression variable
						(variable "n")
					)
					(expression integer "0")
				)
				(block
					(statement =
						(variable "sum")
						(expression +
							(expression variable
								(variable "sum")
							)
							(expression variable
								(variable "n")
							)
						)
					)
					(statement =
						(variable "n")
						(expression -
							(expression variable
								(variable "n")
							)
							(expression integer "1")
						)
					)
				)
			)
			(statement return
				(expression variable
					(variable "sum")
				)
			)
		)
	)
)
