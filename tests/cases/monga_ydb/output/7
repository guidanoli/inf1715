(program
	(def_type id="inta"
		(typedesc array
			(typedesc "int")
		)
	)
	(def_type id="ivec"
		(typedesc record
			(field id="arr" type="inta")
			(field id="size" type="int")
		)
	)
	(def_function id="ivec_new" type="ivec"
		(parameter id="n" type="int")
		(block
			(def_variable id="v" type="ivec")
			(statement =
				(variable "v")
				(expression new type="ivec")
			)
			(statement =
				(variable record field="size"
					(expression variable
						(variable "v")
					)
				)
				(expression variable
					(variable "n")
				)
			)
			(statement =
				(variable record field="arr"
					(expression variable
						(variable "v")
					)
				)
				(expression new type="int"
					(expression variable
						(variable "n")
					)
				)
			)
			(statement return
				(expression variable
					(variable "v")
				)
			)
		)
	)
)
